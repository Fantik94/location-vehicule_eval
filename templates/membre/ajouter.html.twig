{# templates/membre/ajouter.html.twig #}

{% extends 'admin_base.html.twig' %}

{% block title %}Ajouter un Membre{% endblock %}

{% block stylesheets %}
<style>

    .admin-dashboard {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        flex: 0 0 250px;
        background-color: #f8f9fa;
        height: calc(100vh - 56px);
        padding: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
    }

    .sidebar h3 {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }

    .sidebar a {
        display: block;
        padding: 10px 15px;
        color: #333;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .sidebar a:hover, .sidebar a.active {
        background-color: #007bff;
        color: white;
    }

    .admin-content {
        flex-grow: 1;
        padding: 20px;
    }

    .container {
        background-color: #f9f9f9; 
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 8px;
        padding: 2rem;
        margin-top: 2rem;
    }

    h1 {
        font-size: 1.75rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        font-size: 0.875rem;
        line-height: 1.5;
        padding: 0.5rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        height: auto;
    }

    .btn-success {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        line-height: 1.5;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

    .btn-success:hover {
        color: #fff;
        background-color: #218838;
        border-color: #1e7e34;
    }
</style>
{% endblock %}

{% block admin_content %}
<div class="container">
    <h1>Ajouter un Membre</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="form-group">
        {{ form_label(form.pseudo, 'Pseudo', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
    </div>
    <!-- Répétez le bloc ci-dessus pour chaque champ du formulaire -->
    <div class="form-group">
        {{ form_label(form.mdp, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.civilite, 'Civilité', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.civilite, {'attr': {'class': 'form-control'}}) }}
    </div>
    <!-- Si vous avez d'autres champs, continuez à les ajouter ici -->
    <button type="submit" class="btn btn-success">Ajouter un membre</button>
    {{ form_end(form) }}
</div>
{% endblock %}
