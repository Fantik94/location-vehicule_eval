{# templates/membre/gestion_membres.html.twig #}

{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des Membres{% endblock %}

{% block stylesheets %}
<style>

    .admin-dashboard {
        display: flex;
        min-height: 100vh;
    }
    
    .sidebar {
        flex: 0 0 250px;
        background-color: #f8f9fa;
        height: calc(100vh - 56px);
        padding: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        overflow-y: auto;
    }
    
    .sidebar h3 {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
    }
    
    .sidebar a {
        display: block;
        padding: 10px 15px;
        color: #333;
        text-decoration: none;
        border-radius: 4px;
        margin-bottom: 5px;
        transition: background-color 0.3s, color 0.3s;
    }
    
    .sidebar a:hover, .sidebar a.active {
        background-color: #007bff;
        color: white;
    }
    
    .admin-content {
        flex-grow: 1;
        padding: 20px;
    }

    /* Adaptation du style de la page gestion des véhicules */
    .container {
        background-color: #f9f9f9;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border-radius: 8px;
        padding-bottom: 20px;
    }

    h1 {
        font-size: 1.75rem;
        background-color: #4CAF50;
        color: #ffffff;
        padding: 16px 24px;
        margin: 0 -24px 20px;
        border-radius: 8px 8px 0 0;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        margin-bottom: 1rem;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .table {
        margin-bottom: 0;
    }

    .table th {
        font-weight: 600;
        background-color: #e9ecef;
        color: #495057;
    }

    .table td {
        vertical-align: middle;
        color: #495057;
    }

    .table-hover tbody tr:hover {
        box-shadow: inset 5px 0 0 #007bff;
    }

    .table tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }
</style>
{% endblock %}

{% block admin_content %}
<div class="container mt-4">
    <h1>Gestion des Membres</h1>
    <a href="{{ path('membre_ajouter') }}" class="btn btn-success mb-3">Ajouter un Membre</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Pseudo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Civilité</th>
                <th>Statut</th>
                <th>Date d'enregistrement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for membre in membres %}
            <tr>
                <td>{{ membre.idMembre }}</td>
                <td>{{ membre.pseudo }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.prenom }}</td>
                <td>{{ membre.email }}</td>
                <td>{{ membre.civilite ? 'Homme' : 'Femme' }}</td>
                <td>{{ membre.statut ? 'Admin' : 'Membre' }}</td>
                <td>{{ membre.dateEnregistrement|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="{{ path('membre_modifier', {'id': membre.idMembre}) }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form method="post" action="{{ path('membre_supprimer', {'id': membre.idMembre}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce membre ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membre.idMembre) }}">
                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
