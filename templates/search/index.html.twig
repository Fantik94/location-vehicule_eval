{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        line-height: 1.6;
    }
 
    .search-header {
        text-align: center;
        padding: 1rem;
        background-color: #9f8acc;
        color: white;
    }
 
    .search-results {
        max-width: 1000px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
  
    .vehicle {
        display: grid;
        grid-template-columns: 1fr 3fr;
        gap: 20px;
        align-items: center;
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

    .vehicle img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .vehicle-details {
        padding: 0 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .vehicle-description {
        max-width: 80%; /* Ajustez en fonction de la largeur de votre bouton */
    }

    .vehicle h3 {
        margin-top: 0;
        color: #9f8acc;
    }

    .vehicle p {
        margin: 0.5rem 0;
    }

    .vehicle-price {
        font-size: 1.5rem;
        color: #4CAF50;
        font-weight: bold;
        margin: 10px 0;
    }

    .btn-reserver {
        padding: 10px 20px;
        background-color: #5cb85c;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

    .btn-reserver:hover {
        background-color: #4cae4c;
    }
</style>
{% endblock %}

{% block body %}
<div class="search-header">
    <h1>Résultats de recherche</h1>
    <p>Recherche pour la période du {{ start_date }} au {{ end_date }}.</p>
</div>

<div class="search-results">
    {% for vehicle in vehicles %}
    <div class="vehicle">
        <img src="{{ vehicle.photo }}" alt="Photo de {{ vehicle.titre }}" />
        <div class="vehicle-details">
            <div class="vehicle-description">
                <h3>{{ vehicle.titre }}</h3>
               <p> <strong>Marque: </strong>{{ vehicle.marque }}</p>
                <p><strong>Modèle:  </strong>{{ vehicle.modele }}</p>
                <p><strong>Description:  </strong>{{ vehicle.description }}</p>
                <p class="vehicle-price">Prix journalier: {{ vehicle.prixJournalier }} €</p>
            </div>
            <a href="#" class="btn-reserver">Réserver</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
