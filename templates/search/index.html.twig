{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        line-height: 1.6;
    }

    .search-results-banner {
        background-image: url('2.jpg');
        background-size: cover;
        background-position: center;
        padding: 40px 0;
        text-align: center;
        color: white;
        text-shadow: 1px 1px 2px black;
        margin-bottom: 30px;
    }

    .search-results-banner h1 {
        margin: 0;
        font-size: 2.5rem;
    }

    .search-results-banner p {
        font-size: 1.2rem;
    }

    .vehicle {
        display: grid;
        grid-template-columns: 1fr 3fr;
        gap: 20px;
        align-items: center;
        background-color: white;
        border-bottom: 1px solid #eee;
        padding: 20px;
        margin: 20px 10%; 
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px; /* Espacement ajouté entre les véhicules */
    }

    .vehicle img {
        width: 100%;
        border-radius: 8px;
    }

    .vehicle-details {
        padding: 0 15px;
    }

    .vehicle h3 {
        color: #9f8acc;
        margin: 0;
    }

    .vehicle p {
        margin: 0.5rem 0;
    }

    .vehicle-price {
        font-size: 1.5rem;
        color: #4CAF50;
        font-weight: bold;
    }

    .btn-reserver {
        padding: 10px 20px;
        background-color: #5cb85c;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }

    .btn-reserver:hover {
        background-color: #4cae4c;
    }
</style>
{% endblock %}

{% block body %}
<div class="search-results-banner">
    <h1>Résultats de recherche</h1>
    <p>Recherche pour la période du {{ start_date }} au {{ end_date }}.</p>
</div>

<div class="vehicle-results">
    {% for vehicle in vehicles %}
    <div class="vehicle">
        <img src="{{ vehicle.photo }}" alt="Photo de {{ vehicle.titre }}" />
        <div class="vehicle-details">
            <h3>{{ vehicle.titre }}</h3>
            <p><strong>Marque: </strong>{{ vehicle.marque }}</p>
            <p><strong>Modèle: </strong>{{ vehicle.modele }}</p>
            <p><strong>Description: </strong>{{ vehicle.description }}</p>
            <p class="vehicle-price">Prix journalier: {{ vehicle.prixJournalier }} €</p>
            <a href="#" class="btn-reserver">Réserver</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
