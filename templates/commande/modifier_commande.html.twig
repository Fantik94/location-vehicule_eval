{% extends 'admin_base.html.twig' %}

{% block title %}Modifier Commande{% endblock %}

{% block admin_content %}
<style>
    .container {
        background-color: #fff; /* Couleur de fond blanche pour le contraste */
        border-radius: 8px; /* Bords arrondis pour un look moderne */
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1); /* Ombre subtile pour la profondeur */
        padding: 2rem; /* Espacement autour du contenu */
        margin-top: 2rem; /* Espace au-dessus du conteneur */
    }

    h1 {
        color: #007bff; /* Couleur bleue pour le titre, cohérente avec le thème Bootstrap */
        margin-bottom: 1.5rem; /* Espace en dessous du titre */
        text-align: center; /* Centre le titre */
    }

    .form-group {
        margin-bottom: 1rem; /* Espace entre les champs */
    }

    .form-control {
        border: 1px solid #ced4da; /* Bordure des champs de formulaire */
        border-radius: 0.25rem; /* Bords arrondis des champs de formulaire */
        padding: 0.375rem 0.75rem; /* Rembourrage interne des champs de formulaire */
    }

    .btn-primary {
        background-color: #007bff; /* Couleur de fond du bouton, cohérente avec le thème Bootstrap */
        border-color: #007bff; /* Couleur de la bordure du bouton */
        padding: 0.375rem 0.75rem; /* Rembourrage interne du bouton */
        border-radius: 0.25rem; /* Bords arrondis du bouton */
        font-size: 1rem; /* Taille de la police du bouton */
        line-height: 1.5; /* Hauteur de ligne du bouton */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Couleur de fond du bouton au survol */
        border-color: #0056b3; /* Couleur de la bordure du bouton au survol */
    }
</style>

<div class="container">
    <h1>Modifier Commande</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.dateHeureDepart, 'Date et Heure de Départ') }}
            {{ form_widget(form.dateHeureDepart, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateHeureDepart) }}
        </div>
        <div class="form-group">
            {{ form_label(form.dateHeureFin, 'Date et Heure de Fin') }}
            {{ form_widget(form.dateHeureFin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateHeureFin) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prixTotal, 'Prix Total') }}
            {{ form_widget(form.prixTotal, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prixTotal) }}
        </div>
        <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
    {{ form_end(form) }}
</div>
{% endblock %}
