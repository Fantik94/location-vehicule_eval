{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
        color: #333;
        line-height: 1.6;
        padding: 40px 0;
    }

    .container {
        max-width: 400px;
        margin: auto;
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        background: linear-gradient(to top right, #f8f9fa, #e3e7eb);
    }

    h1 {
        text-align: center;
        color: #8854d0;
        margin-bottom: 30px;
    }

    form {
        display: grid;
        grid-gap: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    select {
        padding: 12px 15px;
        border: 1px solid #d1d3e2;
        border-radius: 5px;
        background: #fff;
    }

    .btn-primary {
        background: linear-gradient(45deg, #a55eea, #fbc2eb);
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(45deg, #b892f7, #f9cbf2);
    }

    .form-control:focus {
        border-color: #8854d0;
        box-shadow: 0 0 0 0.2rem rgba(136, 84, 208, 0.25);
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Inscription</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.mdp, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(registrationForm.civilite, {'attr': {'class': 'form-control'}}) }}
        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
