{# templates/vehicule/modifier.html.twig #}

{% extends 'admin_base.html.twig' %}

{% block title %}Modifier Véhicule{% endblock %}

{% block admin_content %}
<div class="container mt-4">
    <h1>Modifier Véhicule</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.titre, 'Titre du véhicule') }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre) }}
        </div>
        <div class="form-group">
            {{ form_label(form.marque, 'Marque') }}
            {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.marque) }}
        </div>
        <div class="form-group">
            {{ form_label(form.modele, 'Modèle') }}
            {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.modele) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group">
            {{ form_label(form.photo, 'Photo URL') }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.photo) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prix_journalier, 'Prix Journalier') }}
            {{ form_widget(form.prix_journalier, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix_journalier) }}
        </div>
        <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
    {{ form_end(form) }}
</div>
{% endblock %}
