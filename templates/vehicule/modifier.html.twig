{% extends 'admin_base.html.twig' %}

{% block title %}Modifier Véhicule{% endblock %}

{% block admin_content %}
<style>
    .container {
        background: #fff;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
    }

    h1 {
        font-size: 1.75rem;
        color: #333;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        font-size: 0.875rem;
        line-height: 1.5;
        padding: 0.5rem 1rem;
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
        height: auto;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        font-size: 0.875rem;
        line-height: 1.5;
        transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

    .btn-primary:hover {
        color: #fff;
        background-color: #0069d9;
        border-color: #0062cc;
    }

    .btn-primary:focus, .btn-primary.focus {
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.5);
    }
</style>

<div class="container">
    <h1>Modifier Véhicule</h1>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.titre, 'Titre du véhicule') }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.titre) }}
        </div>
        <div class="form-group">
            {{ form_label(form.marque, 'Marque') }}
            {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.marque) }}
        </div>
        <div class="form-group">
            {{ form_label(form.modele, 'Modèle') }}
            {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.modele) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="form-group">
            {{ form_label(form.photo, 'Photo URL') }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.photo) }}
        </div>
        <div class="form-group">
            {{ form_label(form.prix_journalier, 'Prix Journalier') }}
            {{ form_widget(form.prix_journalier, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix_journalier) }}
        </div>
        <button type="submit" class="btn btn-primary">Sauvegarder les modifications</button>
    {{ form_end(form) }}
</div>
{% endblock %}
