{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-dashboard {
            display: flex;
            min-height: 100vh;
        }
    
        .sidebar {
            flex: 0 0 250px;
            background-color: #f8f9fa;
            height: calc(100vh - 56px);
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }
    
        .sidebar h3 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }
    
        .sidebar a {
            display: block;
            padding: 10px 15px;
            color: #333;
            text-decoration: none;
            border-radius: 4px;
            margin-bottom: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
    
        .sidebar a:hover, .sidebar a.active {
            background-color: #007bff;
            color: white;
        }
    
        .admin-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-dashboard">
        <div class="sidebar">
            <h3>Admin Panel</h3>
            <a href="{{ path('admin_dashboard') }}" class="{% if app.request.attributes.get('_route') == 'admin_dashboard' %}active{% endif %}">Dashboard</a>
            <a href="">Gestion des Membres</a>
            <a href="{{ path('gestion_commandes') }}">Gestion des Commandes</a>
            <a href="{{ path('gestion_vehicules') }}" class="{% if app.request.attributes.get('_route') == 'gestion_vehicules' %}active{% endif %}">Gestion des VÃ©hicules</a>
        </div>
        <div class="admin-content">
            {% block admin_content %}{% endblock %}
        </div>
    </div>
{% endblock %}
